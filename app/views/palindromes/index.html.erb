<% if session[:current_user_id]%>
  <%= form_with url: "/logout", data: { behavior: "autosave" }, method: :get do |form| %>
    <%= submit_tag("Выйти",class: "btn btn-primary btn-lg", id: 'btn') %>
	<% end %>
  <br/>
  <%= form_with url: "/result", data: { behavior: "autosave" }, method: :get do |form| %>
    <%= number_field_tag :number, class: 'form-control', id: 'number' %> <br/>
    <%= submit_tag("Найти", id: 'btn') %>
  <% end %>
<%else%>
  <%= form_with url: "/login", data: { behavior: "autosave" }, method: :get do |form| %>
    <%= submit_tag("Войти",class: "btn btn-primary btn-lg", id: 'btn') %>
	<% end %>
  <br>
  <%= form_with url: "/register", data: { behavior: "autosave" }, method: :get do |form| %>
    <%= submit_tag("Зарегистрироваться",class: "btn btn-primary btn-lg", id: 'btn') %>
	<% end %>
<% end %>
